            android:textSize="20sp"
            android:lineSpacingExtra="8dp"
            android:text="test"
            android:padding="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:lineSpacingExtra="8dp"
            android:text="test"
            android:padding="@dimen/activity_horizontal_margin"
            />

