<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="OventAlertDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_in</item>
    </style>
</resources>
